<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backred"
    tools:context=".ui.AdminFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:gravity="center"
                android:background="@drawable/circular">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_profile"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_below="@id/layout1"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parakha Lab"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay3"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Name :"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/adnaval"
                android:layout_toRightOf="@+id/adna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noorain Khan"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_below="@id/lay3"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/addrval"
                android:layout_toRightOf="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karam Ganj, Old Gurudwara,Etawah,U.P. "
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_below="@id/layout3"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number :"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/phnval"
                android:layout_toRightOf="@+id/phn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08124567098"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laygen6"
            android:layout_below="@id/layout4"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/genval"
                android:layout_toRightOf="@+id/gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_below="@id/laygen6"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group :"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/grpval"
                android:layout_toRightOf="@+id/grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O +"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout6"
            android:layout_below="@id/layout5"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age :"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/ageval"
                android:layout_toRightOf="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 yrs"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </RelativeLayout>

        <Button
            android:layout_width="100dp"
            android:layout_below="@+id/layout6"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonback"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Edit"
            android:textSize="20sp"/>
    </RelativeLayout>

</FrameLayout>